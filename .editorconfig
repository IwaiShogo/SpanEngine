# 最上位の設定ファイルであることを示す
root = true

# =========================================================
# 共通設定 (エンコード指定は行わない)
# =========================================================
[*]
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# =========================================================
# C++ ソースコード (ここだけで UTF-8 BOM を強制する)
# =========================================================
[*.{cpp,h,hpp,c,cc,cxx,hxx,ixx,inl}]
charset = utf-8-bom

# =========================================================
# シェーダーファイル (エンコード指定をしない = 現状維持)
# =========================================================
[*.{hlsl,hlsli}]
# ここには charset を書かない
# -> VSはファイルの既存エンコード(Shift-JIS)を維持してくれます
charset = unset
